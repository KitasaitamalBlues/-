<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hua.genshintools.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <HBox alignment="CENTER" spacing="10.0"><Label fx:id="file" text="请选择文件"/><Label fx:id="status" text="status"/><Button fx:id="btnStatus" text="3s后启动" visible="false" managed="false" onAction="#btnChange"/></HBox>
    <Button fx:id="chooseFile" text="选择文件" onAction="#select"/>
    <Label fx:id="handle"/>
    <Button fx:id="binding" text="重新绑定原神句柄" onAction="#bind"/>
    <Label fx:id="HotKeyInfo"/>
    <Label fx:id="sig" text="\@hua" />
</VBox>
